Assert:Sealed{
  recMdf #(assertion: Bool): Void -> this#(assertion, { Void }),
  recMdf #[R](assertion: Bool, cont: recMdf AssertCont[mdf R]): recMdf R -> assertion.look{
    .then -> cont#,
    .else -> this._fail[mdf R]()
    },
  recMdf #[R](assertion: Bool, msg: Str, cont: mut AssertCont[mdf R]): mdf R -> assertion.look{
    .then -> cont#,
    .else -> this._fail[mdf R](msg)
    },
  ._fail[R]: mdf R -> this._fail,
  ._fail[R](msg: Str): mdf R -> this._fail(msg),
  }
AssertCont[R]:{ recMdf #: recMdf R }
