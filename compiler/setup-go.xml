<project>
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.fearlang</groupId>
    <artifactId>fearless</artifactId>
    <version>1</version>
    <properties>
        <maven.compiler.release>21</maven.compiler.release>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>
    <pluginRepositories>
        <pluginRepository>
            <id>sonatype-public-repository</id>
            <url>https://oss.sonatype.org/content/groups/public</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </pluginRepository>
    </pluginRepositories>
    <build>
        <plugins>
            <plugin>
                <groupId>com.googlecode.maven-download-plugin</groupId>
                <artifactId>download-maven-plugin</artifactId>
                <version>1.8.1</version>
                <executions>
                    <execution>
                        <id>download-go-linux-amd64</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://go.dev/dl/go1.22.0.linux-amd64.tar.gz</url>
                            <unpack>true</unpack>
                            <outputDirectory>resources/go-compilers/go-linux-amd64</outputDirectory>
                            <unpack>true</unpack>
                            <sha256>f6c8a87aa03b92c4b0bf3d558e28ea03006eb29db78917daec5cfb6ec1046265</sha256>
                        </configuration>
                    </execution>
                    <execution>
                        <id>download-go-linux-arm64</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://go.dev/dl/go1.22.0.linux-arm64.tar.gz</url>
                            <unpack>true</unpack>
                            <outputDirectory>resources/go-compilers/go-linux-arm64</outputDirectory>
                            <unpack>true</unpack>
                            <sha256>6a63fef0e050146f275bf02a0896badfe77c11b6f05499bb647e7bd613a45a10</sha256>
                        </configuration>
                    </execution>
                    <execution>
                        <id>download-go-macos-amd64</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://go.dev/dl/go1.22.0.darwin-amd64.tar.gz</url>
                            <unpack>true</unpack>
                            <outputDirectory>resources/go-compilers/go-macos-amd64</outputDirectory>
                            <unpack>true</unpack>
                            <sha256>ebca81df938d2d1047cc992be6c6c759543cf309d401b86af38a6aed3d4090f4</sha256>
                        </configuration>
                    </execution>
                    <execution>
                        <id>download-go-macos-arm64</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://go.dev/dl/go1.22.0.darwin-arm64.tar.gz</url>
                            <unpack>true</unpack>
                            <outputDirectory>resources/go-compilers/go-macos-arm64</outputDirectory>
                            <unpack>true</unpack>
                            <sha256>bf8e388b09134164717cd52d3285a4ab3b68691b80515212da0e9f56f518fb1e</sha256>
                        </configuration>
                    </execution>
                    <execution>
                        <id>download-go-windows-amd64</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://go.dev/dl/go1.22.0.windows-amd64.zip</url>
                            <unpack>true</unpack>
                            <outputDirectory>resources/go-compilers/go-windows-amd64</outputDirectory>
                            <unpack>true</unpack>
                            <sha256>78b3158fe3aa358e0b6c9f26ecd338f9a11441e88bc434ae2e9f0ca2b0cc4dd3</sha256>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>